#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct score
{
    char name[20];
    int korean;
    int english;
    int math;
};

int main(void)
{
    struct score data[10];
    FILE *f;
    f = fopen("score.txt", "r");

    if(f == NULL)
    {
        printf("파일열기 실패\n");
        exit(0);
    }

    FILE *fp;
    fp = fopen("result.txt", "w");
   

    int n = 0;

    while(fscanf(f,"%s %d %d %d", data[n].name, &data[n].korean, &data[n].english, &data[n].math) != EOF)
    {
        fprintf(fp,"%6s %4d %4d %4d\n", data[n].name, data[n].korean, data[n].english, data[n].math);
        printf("%6s %4d %4d %4d\n", data[n].name, (data[n].korean + data[n].english + data[n].math)/3);
    }
    
    fclose(f);
    fclose(fp);

    return 0;
}

